command_reloadproducts_Impl(playerid)
{
    foreach(new i : Products)
    {
        product_Delete(i, 0, 0);
        Iter_SafeRemove(Products, i, i);
    }
    LoadProducts();
    SendClientMessage(playerid, -1, "Pomyœlnie prze³adowano produkty!");
    return 1;
}

