command_togglod_Impl(playerid)
{
    if(!GetPVarInt(playerid, "TogGlod"))
    {
        SetPVarInt(playerid, "TogGlod", 1);
        //HidePlayerProgressBar(playerid, PlayerHungerBar[playerid]);
        htTextDrawHide(playerid);
    }
    else
    {
        SetPVarInt(playerid, "TogGlod", 0);
        htTextDrawShow(playerid);
    }
    return 1;
}

