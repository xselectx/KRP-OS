ptask UpdateDuty3D[8000](playerid)
{
    if(CheckBW(playerid) || afk_timer[playerid] != -1 || OnDuty[playerid] < 1 || IsAPrzestepca(playerid) || OnDutyCD[playerid]) return 1;
    new groupid = GetPlayerGroupUID(playerid, OnDuty[playerid]-1);
    if(!IsValidGroup(groupid)) return 1;
    SetPlayerChatBubble(playerid, sprintf("[%s]", GroupInfo[groupid][g_ShortName]), GroupInfo[groupid][g_Color], 10.0, 9000);
    return 1;
}