command_destroyconvoybox_Impl(playerid, boxid)
{
    if(PlayerInfo[playerid][pAdmin] < 5000)
    {
        noAccessMessage(playerid);
        return 1;
    }

    DestroyBox(boxid);

    SendClientMessage(playerid, -1, sprintf("Zniszczy³eœ box o id %d", boxid));
    return 1;
}

