command_uleczall_Impl(playerid)
{
    if(PlayerInfo[playerid][pAdmin] < 1000 && !IsAScripter(playerid))
    {
        noAccessMessage(playerid);
        return 1;
    }

    foreach(new i : Player) 
    {
        CureFromAllDiseases(i);
    }
    Log(adminLog, WARNING, "Admin %s wyleczy³ wszystkich graczy z chorób.", GetPlayerLogName(playerid));
    SendClientMessageToAll(COLOR_LIGHTBLUE, sprintf("Admin %s wyleczy³ wszystkich graczy z chorób.", GetNickEx(playerid)));
    return 1;
}

